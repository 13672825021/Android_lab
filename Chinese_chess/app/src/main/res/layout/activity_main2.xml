<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.chinese_chess.Main2Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show"
        android:text="here"
        app:layout_constraintBottom_toBottomOf="parent" />
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:id="@+id/root"
        android:orientation="horizontal">
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart"
        android:text="重新开始"
        app:layout_constraintTop_toBottomOf="@id/root"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/undo"
        android:text="悔棋"
        app:layout_constraintTop_toBottomOf="@id/root"
        app:layout_constraintLeft_toRightOf="@id/restart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/back"
        android:text="返回主界面"
        app:layout_constraintTop_toBottomOf="@id/root"
        app:layout_constraintLeft_toRightOf="@id/undo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intelligence"
        android:text="开启智障模式"
        app:layout_constraintTop_toBottomOf="@id/restart"
        app:layout_constraintLeft_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mode"
        android:textSize="20dp"
        android:text="当前模式：智能模式"
        app:layout_constraintTop_toBottomOf="@id/restart"
        app:layout_constraintLeft_toRightOf="@id/intelligence"
        android:layout_marginTop="10dp"/>
</android.support.constraint.ConstraintLayout>
